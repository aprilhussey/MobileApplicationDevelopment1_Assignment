<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/corkboard_background"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/txtUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:text=""
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="Dashboard"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <ImageButton
        android:id="@+id/btnFileStorage"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_gravity="start"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="30dp"
        android:rotation="-5"
        android:background="@drawable/my_files"
        android:text="My Files" />

    <ImageButton
        android:id="@+id/btnQuiz"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_gravity="start"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="40dp"
        android:rotation="5"
        android:background="@drawable/quiz"
        android:text="Quiz" />

    <ImageButton
        android:id="@+id/btnDiceRoller"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_gravity="start"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="60dp"
        android:rotation="-2"
        android:background="@drawable/dice_roller"
        android:text="Dice Roller" />
</LinearLayout>