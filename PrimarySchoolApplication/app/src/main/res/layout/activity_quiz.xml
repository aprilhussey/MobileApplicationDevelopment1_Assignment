<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@drawable/whiteboard_background"
        tools:context=".QuizActivity" >

    <TextView
        android:id="@+id/txtUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:text=""
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="Multiple Choice Quiz"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <ImageView
        android:id="@+id/imgQuestion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:text="Question"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp" >

        <RadioButton
            android:id="@+id/rbtnOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_black"
            android:text="Option 1" />

        <RadioButton
            android:id="@+id/rbtnOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_black"
            android:text="Option 2" />

        <RadioButton
            android:id="@+id/rbtnOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_black"
            android:text="Option 3" />

        <RadioButton
            android:id="@+id/rbtnOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_black"
            android:text="Option 4" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSubmitAnswer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/pale_black"
        android:text="Submit Answer" />

</LinearLayout>