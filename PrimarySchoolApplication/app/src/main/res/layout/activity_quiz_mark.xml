<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whiteboard_background"
    tools:context=".QuizMarkActivity">

    <TextView
        android:id="@+id/txtUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:text=""
        android:textSize="16dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="Quiz Mark"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/txtQuizMark"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="Mark"
        android:textSize="72sp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSaveScore"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/pale_black"
        android:text="Save Score to File" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/pale_black"
        android:text="Exit to Dashboard" />

</LinearLayout>